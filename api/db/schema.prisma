model Student {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
  meeting  Meeting[]
}

model Supervisor {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
  meeting  Meeting[]
}

// STATUS:
// ACTIVE = 0
// DONE = 1
// CANCELED = 2

model Meeting {
  id           Int          @id @default(autoincrement())
  dateTime     DateTime
  student      Student      @relation(fields: [studentId], references: [id])
  studentId    Int
  supervisor   Supervisor[]
  local        String
  notes        String
  toDo         String
  status       Int          @default(0)
  cancelMotive String?
  approved     Boolean      @default(false)
}

// STATUS:
// ACTIVE = 0
// DONE = 1

model Goal {
  id          Int       @id @default(autoincrement())
  deadline    DateTime?
  conclusion  DateTime?
  status      Int       @default(0)
  description String
  effort      Decimal?
  Project     Project?  @relation(fields: [projectId], references: [id])
  projectId   Int?
}

model Project {
  id    Int    @id @default(autoincrement())
  name  String
  goals Goal[]
}
